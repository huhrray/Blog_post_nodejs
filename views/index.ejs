<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="blogs content">
        <h2> 모든 포스트</h2>

        <% if(blogs.length > 0){ %>
          <% blogs.forEach(blog => { %>
            <a clss="single" href="/blogs/<%= blog._id %>">
              <h3 class="title"><%= blog.title %></h3>
              <p class="snippet"><%= blog.snippet %></p>
            </a>
          <%})%> 
        <% } else { %>
            <p>새로운 글을 포스팅해보세요!</p>
        <% } %>
    </div>
    <%- include('./partials/footer.ejs') %>
</body>
</html>